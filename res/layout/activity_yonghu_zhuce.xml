<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg" >
    <RelativeLayout 
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mmtitle_bg"
        >
        <Button
            android:id="@+id/btn_back"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/app_title_btn_back"
            android:text="@string/appkefu_back"
            android:textColor="#fff"
            android:textSize="14sp" />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户注册"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            />
        
    </RelativeLayout>
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_rounded_miaobian"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/register_user_edit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#0000"
                android:hint="用户名"
                android:singleLine="true"
                android:padding="8dp" />

            <include layout="@layout/layout_line" />

            <EditText
                android:id="@+id/register_passwd_edit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#0000"
                android:hint="密码"
                android:singleLine="true"
				android:password="true"
                android:padding="8dp" />
             <include layout="@layout/layout_line" />

            <EditText
                android:id="@+id/re_register_passwd_edit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#0000"
                android:hint="密码确认"
                android:singleLine="true"
				android:password="true"
                android:padding="8dp" />
        </LinearLayout>

        <Button
            android:id="@+id/register_register_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_denglu"
            android:gravity="center"
            android:padding="8dp"
            android:text="注 册"
            android:textStyle="bold"
            android:textColor="#ffffff" />
    </LinearLayout>

</RelativeLayout>