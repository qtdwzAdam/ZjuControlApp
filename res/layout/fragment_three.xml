<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.herotculb.fragmentdemo.MainActivity$PlaceholderFragment" >

    
    <com.ZjuControlApp.adapter.RefreshableView
        android:id="@+id/refreshable_view_frame_three"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        <ListView
            android:id="@+id/list_view_fram_three"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scrollbars="none" >
        </ListView>
    </com.ZjuControlApp.adapter.RefreshableView>
    
   	<LinearLayout
       android:id="@+id/home_info_inner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp" >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0000"
            android:src="@drawable/home_info_inner" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="室内环境"
            android:textColor="#000000"
            android:layout_marginRight="45dp"
            android:textSize="20sp"
            android:textStyle="bold|italic" />
    </LinearLayout>
    <include layout="@layout/layout_line1" />
    
	<LinearLayout
       android:id="@+id/home_info_outer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp" >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0000"
            android:src="@drawable/home_info_outer" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="户外指数"
            android:textColor="#000000"
            android:layout_marginRight="45dp"
            android:textSize="20sp"
            android:textStyle="bold|italic" />
    </LinearLayout>
    <include layout="@layout/layout_line1" />

   	<LinearLayout
       android:id="@+id/home_info_kongzhi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp" >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0000"
            android:src="@drawable/home_info_control" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="家庭控制"
            android:textColor="#000000"
            android:layout_marginRight="45dp"
            android:textSize="20sp"
            android:textStyle="bold|italic" />
    </LinearLayout>
    <include layout="@layout/layout_line1" />
</LinearLayout>