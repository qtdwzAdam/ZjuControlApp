<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#ffffff"
    tools:context="com.herotculb.fragmentdemo.MainActivity$PlaceholderFragment" >

    <RelativeLayout
        android:id="@+id/layout_home_info_main"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/mmtitle_bg" >
        <Button
            android:id="@+id/home_reback_btn"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/app_title_btn_back"
            android:text="@string/appkefu_back"
            android:textColor="#fff"
            android:textSize="14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="控制中心"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />
        <ImageButton
            android:id="@+id/layout_home_info_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="#0000"
            android:onClick="click"
            android:src="@drawable/abc_ic_menu_moreoverflow_normal_holo_light" />
    </RelativeLayout>
    
   	<LinearLayout
       android:id="@+id/home_info_kongzhi_bingxiang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0000"
            android:text="冰箱温度" />
        <EditText
            android:id="@+id/home_info_bingxiang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="当前温度：16"
            android:textColor="#000000"
            android:layout_marginRight="45dp"
            android:textSize="20sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

	<LinearLayout
       android:id="@+id/home_info_kongzhi_kongtiao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0000"
            android:text="空调温度" />
        <EditText
            android:id="@+id/home_info_kongtiao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="当前温度：4"
            android:textColor="#000000"
            android:layout_marginRight="45dp"
            android:textSize="20sp"
            android:textStyle="bold|italic" />
    </LinearLayout>
    
	<LinearLayout
       android:id="@+id/home_info_kongzhi_meiqi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0000"
            android:text="煤气状态" />
        <EditText
            android:id="@+id/home_info_meiqi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="关"
            android:textColor="#000000"
            android:layout_marginRight="45dp"
            android:textSize="20sp"
            android:textStyle="bold|italic" />
    </LinearLayout>
</LinearLayout>
