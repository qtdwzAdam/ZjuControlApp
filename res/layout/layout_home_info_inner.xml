	            android:textColor="#000000"
	            android:layout_marginRight="45dp"
	            android:textSize="20sp"
	            android:textStyle="bold|italic" />
	    </LinearLayout>
	    <include layout="@layout/layout_line1" />
	    
		<LinearLayout
