<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#eee"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/add_kz_kaig_top_layout"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/mmtitle_bg" >

        <Button
            android:id="@+id/add_kz_kaig_reback_btn"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/app_title_btn_back"
            android:text="@string/appkefu_back"
            android:textColor="#fff"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="添加新监控目标-开关"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout 
        android:id="@+id/add_kz_kaig_title"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/add_kz_kaig_top_layout"
        android:layout_marginTop="20dp"
        >
        <TextView 
	        android:layout_width="110dp"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
			android:layout_marginLeft="27dp"
	        android:text="设备名称"
	        android:gravity="center_vertical"
	        android:singleLine="true"
	        android:textColor="#000"
	        android:textSize="25sp" 
            />
		<EditText
	        android:id="@+id/add_kz_kaig_user_edit"
	        android:layout_width="120dp"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
			android:layout_marginRight="27dp"
	        android:background="@drawable/login_editbox"
	        android:hint="设备名称"
	        android:gravity="center_vertical"
	        android:singleLine="true"
	        android:textColor="#000"
	        android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout 
        android:id="@+id/add_kz_kaig_method_bluetooth"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/add_kz_kaig_title"
        android:layout_marginTop="20dp"
        >
        <TextView 
	        android:layout_width="110dp"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
			android:layout_marginLeft="27dp"
	        android:text="搜索蓝牙"
	        android:gravity="center_vertical"
	        android:singleLine="true"
	        android:textColor="#000"
	        android:textSize="25sp" 
            />
		<EditText
	        android:id="@+id/add_kz_kaig_inner_id"
	        android:layout_width="120dp"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
			android:layout_marginRight="27dp"
	        android:background="@drawable/login_editbox"
	        android:hint="内部编号"
	        android:gravity="center_vertical"
	        android:singleLine="true"
	        android:textColor="#000"
	        android:textSize="15sp" />
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_kz_kaig_method_bluetooth"
        android:layout_marginTop="20dp" >

        <Button
            android:id="@+id/add_kz_kaig_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:text="添加新设备"
            android:background="@drawable/btn_denglu"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </RelativeLayout>

</RelativeLayout>